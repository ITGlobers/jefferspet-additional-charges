{
  "extends": "@vtex/tsconfig",
  "compilerOptions": {
    "noEmitOnError": false,
    "lib": ["dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2017",
    "baseUrl": "./",
    "paths": {
        "@app/*": [
            "*"
        ],
        "@typings/*":[
          "./typings/*"
        ],
        "@hooks/*":[
          "./hooks/*"
        ]
    }
  },
  "include": ["./typings/*.d.ts", "./**/*.tsx", "./**/*.ts", "webpack.config.js"]
}
